{
  "component.card.with-footer": {
    "definition": {
      "type": "layout.column",
      "spacing": 0,
      "backgroundColor": "#FFFBFE",
      "borderRadius": 12,
      "border": "1px solid #E7E0EC",
      "children": [
        {
          "type": "layout.column",
          "padding": 16,
          "spacing": 8,
          "children": [
            {
              "type": "text",
              "content": "{{props.title}}",
              "style": "titleLarge",
              "fontWeight": "bold",
              "color": "#1D1B20"
            },
            {
              "type": "text",
              "content": "{{props.description}}",
              "style": "bodyMedium",
              "color": "#49454F",
              "lineHeight": 1.5
            }
          ]
        },
        {
          "type": "divider"
        },
        {
          "type": "layout.row",
          "padding": 16,
          "spacing": 8,
          "mainAxisAlignment": "end",
          "children": [
            {
              "type": "button.text",
              "label": "{{props.cancelLabel}}",
              "onPress": {
                "intent": "{{props.onCancel}}"
              }
            },
            {
              "type": "button.filled",
              "label": "{{props.actionLabel}}",
              "onPress": {
                "intent": "{{props.onAction}}"
              }
            }
          ]
        }
      ]
    }
  }
}