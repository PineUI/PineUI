{
  "component.card.elevated": {
    "definition": {
      "type": "layout.column",
      "padding": 16,
      "spacing": 12,
      "backgroundColor": "#FFFBFE",
      "borderRadius": 12,
      "elevation": 1,
      "children": [
        {
          "type": "layout.column",
          "spacing": 8,
          "children": [
            {
              "type": "text",
              "content": "{{props.title}}",
              "style": "titleLarge",
              "fontWeight": "bold",
              "color": "#1D1B20"
            },
            {
              "type": "text",
              "content": "{{props.description}}",
              "style": "bodyMedium",
              "color": "#49454F",
              "lineHeight": 1.5
            }
          ]
        }
      ]
    }
  }
}