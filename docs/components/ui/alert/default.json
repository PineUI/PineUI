{
  "component.alert.default": {
    "definition": {
      "type": "layout.row",
      "padding": 16,
      "spacing": 12,
      "backgroundColor": "#E8DEF8",
      "borderRadius": 12,
      "crossAxisAlignment": "start",
      "children": [
        {
          "type": "text",
          "content": "ℹ️",
          "style": "titleMedium"
        },
        {
          "type": "layout.column",
          "flex": 1,
          "spacing": 4,
          "children": [
            {
              "type": "text",
              "content": "{{props.title}}",
              "style": "bodyLarge",
              "fontWeight": "bold",
              "color": "#1D1B20"
            },
            {
              "type": "text",
              "content": "{{props.description}}",
              "style": "bodyMedium",
              "color": "#49454F",
              "lineHeight": 1.5
            }
          ]
        }
      ]
    }
  }
}
