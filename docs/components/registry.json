    "alert": {
      "name": "Alert",
      "description": "Displays a callout for user attention with variants for different severity levels",
      "variants": {
        "default": {
          "path": "./ui/alert/default.json",
          "props": {
            "title": {
              "type": "string",
              "required": true,
              "description": "Alert title"
            },
            "description": {
              "type": "string",
              "required": true,
              "description": "Alert message"
            }
          },
          "example": {
            "type": "component.alert.default",
            "props": {
              "title": "Heads up!",
              "description": "You can add components to your app using the cli."
            }
          }
        },
        "destructive": {
          "path": "./ui/alert/destructive.json",
          "props": {
            "title": {
              "type": "string",
              "required": true,
              "description": "Alert title"
            },
            "description": {
              "type": "string",
              "required": true,
              "description": "Alert message"
            }
          },
          "example": {
            "type": "component.alert.destructive",
            "props": {
              "title": "Error",
              "description": "Your session has expired. Please log in again."
            }
          }
        },
        "success": {
          "path": "./ui/alert/success.json",
          "props": {
            "title": {
              "type": "string",
              "required": true,
              "description": "Alert title"
            },
            "description": {
              "type": "string",
              "required": true,
              "description": "Alert message"
            }
          },
          "example": {
            "type": "component.alert.success",
            "props": {
              "title": "Success",
              "description": "Your changes have been saved successfully."
            }
          }
        },
        "warning": {
          "path": "./ui/alert/warning.json",
          "props": {
            "title": {
              "type": "string",
              "required": true,
              "description": "Alert title"
            },
            "description": {
              "type": "string",
              "required": true,
              "description": "Alert message"
            }
          },
          "example": {
            "type": "component.alert.warning",
            "props": {
              "title": "Warning",
              "description": "This action cannot be undone."
            }
          }
        }
      }
    },
    "alert-dialog": {
      "name": "Alert Dialog",
      "description": "A modal dialog that interrupts the user with important content and expects a response",
      "variants": {
        "default": {
          "path": "./ui/alert-dialog/default.json",
          "props": {
            "title": {
              "type": "string",
              "required": true,
              "description": "Dialog title"
            },
            "description": {
              "type": "string",
              "required": true,
              "description": "Dialog message"
            },
            "cancelLabel": {
              "type": "string",
              "required": true,
              "description": "Cancel button label"
            },
            "confirmLabel": {
              "type": "string",
              "required": true,
              "description": "Confirm button label"
            },
            "onCancel": {
              "type": "intent",
              "required": true,
              "description": "Intent to trigger on cancel"
            },
            "onConfirm": {
              "type": "intent",
              "required": true,
              "description": "Intent to trigger on confirm"
            }
          },
          "example": {
            "type": "component.alert-dialog.default",
            "props": {
              "title": "Are you absolutely sure?",
              "description": "This action cannot be undone. This will permanently delete your account and remove your data from our servers.",
              "cancelLabel": "Cancel",
              "confirmLabel": "Continue",
              "onCancel": "dialog.close",
              "onConfirm": "account.delete"
            }
          }
        },
        "destructive": {
          "path": "./ui/alert-dialog/destructive.json",
          "props": {
            "title": {
              "type": "string",
              "required": true,
              "description": "Dialog title"
            },
            "description": {
              "type": "string",
              "required": true,
              "description": "Dialog message"
            },
            "cancelLabel": {
              "type": "string",
              "required": true,
              "description": "Cancel button label"
            },
            "confirmLabel": {
              "type": "string",
              "required": true,
              "description": "Confirm button label"
            },
            "onCancel": {
              "type": "intent",
              "required": true,
              "description": "Intent to trigger on cancel"
            },
            "onConfirm": {
              "type": "intent",
              "required": true,
              "description": "Intent to trigger on confirm"
            }
          },
          "example": {
            "type": "component.alert-dialog.destructive",
            "props": {
              "title": "Delete account",
              "description": "This will permanently delete your account and all associated data. This action cannot be undone.",
              "cancelLabel": "Cancel",
              "confirmLabel": "Delete",
              "onCancel": "dialog.close",
              "onConfirm": "account.delete"
            }
          }
        }
      }
